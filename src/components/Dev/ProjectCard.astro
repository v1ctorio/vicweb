---
const { title, description, link, img } = Astro.props;
---
<div class="project">
    <h2>{title}</h2>
    <p>
    {description}
</p>
    <img
    src={img}
    alt="Latest screenshot"
    width="250px"
    >    
<a href={link}>GitHub</a>
</div>
<style>
    .project {
        margin-top: 20px;
        border-color: red;
        border-width: 10px;
        display: flex;
        flex-direction: column;
		justify-content: center;
        background-color: #f0eef1;
        border-radius: 10px;
        padding: 10px;
        width: 300px;
    }
    .project * {
        padding: 10px;
    }
    .project img {
        border-radius: 10px;
    }
    .project h2 {
        padding-top: 10px;
    }
    .project p {
        padding-top: 10px;
    }
    .project a {
        text-decoration: none;
        color: rgb(2, 132, 199);
    }
</style>