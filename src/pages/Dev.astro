const allPosts = await Astro.glob('../pages/posts/*.md');
import Layout from '../layouts/Layout.astro';
---

<Layout title="Vic. > ~/Dev">
	<main>
	<div>
		<h1>~/Dev</h1>
    <p>
            Here you can find my public stuff (mostly about development). 
    </p>
    <div class="projects">
        <Card 
        title="NixOS flake"
        description="My NixOS flake, the configuration for the systems that I daily use, desktop (nosesisaid) and a laptop(alum)."
        img="https://cloud-qyit5przc-hack-club-bot.vercel.app/0image.png"
        GHlink="https://github.com/v1ctorio/nosesisaido"
        />
        <Card 
        title="Fumo-API"
        description="Rest API of images of fumos (japanese plushies) using typescript and fastify."
        img="https://repository-images.githubusercontent.com/395606928/753b9fdd-b978-4b74-841e-f3973daf9129"
        GHlink="https://github.com/Nosesisaid/fumo-API"
        Trylink="https://fumo-api.nosesisaid.com/"
        />
        <Card
        title="LIFX-Admin"
        description="Discord bot to control LIFX lights through Discord."
        img="https://github.com/v1ctorio/lifx-admin/blob/main/assets/login%20lifxbot.gif?raw=true"
        GHlink="https://github.com/v1ctorio/lifx-admin"
        Installlink="https://discord.com/oauth2/authorize?client_id=904669014658256937"

        />
        <Card 
        title="Charta IM"
        description="A chat app with end-to-end encryption, using the matrix protocol."
        img="https://pbs.twimg.com/profile_images/1614738486614966275/9-YqUKhd_400x400.jpg"
        GHlink=""
        />
        <Card
        title="v1c.rocks"
        description="My personal website, made with Astro and awful css skills."
        img="https://dl.nosesisaid.com/v1c.rocks.png"
        GHlink="https://v1c.rocks"
        />
        <Card
        title="Frederick"
        description=" Frederick is a simple and lightweight cli that helps you with metadata on your audio files."
        img="https://github.com/v1ctorio/frederick/raw/main/vhs/usage.gif"
        GHlink="https://github.com/v1ctorio/frederick"
        />
        <Card 
        title="Hackey"
        description="Unofficial hackclub Sharkey instance, hosted in Nest."
        img=""
        Trylink="https://hk.dino.icu/"
    </div>
		</div>
	</main>
</div>
</Layout>

<style>
	.strike {
		text-decoration: line-through;
	}
	main {
    margin-top: 60px;
    max-width: 100%;
    width: 90%;     
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
}

body {
    margin: 0 auto;
    max-width: 1200px !important; 
    padding: 20px;
}
	h1 {
		padding: 10px 0px 10px 0px;
		font-size: 50px;
	}
	p {
		padding-top: 10px ;
	}
	
	a {
		text-decoration: none;
		color: rgb(2, 132, 199);
	}
    .projects {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    justify-items: center;

    @media (min-width: 600px) {
    .projects {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 900px) {
    .projects {
        grid-template-columns: repeat(3, 1fr);
    }
}
}

</style>
