---
import Card from '../components/Dev/ProjectCard.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
import Layout from '../layouts/Layout.astro';
---

<Layout title="Vic. > ~">
	<main>
	<div>
		<h1>~/Dev</h1>
    <p>
            Here you can find my public stuff (mostly about development). 
    </p>
        <Card 
        title="NixOS flake"
        description="My NixOS flake, the configuration for the systems that I daily use, desktop (nosesisaid) and a laptop(alum)."
        img="https://cloud-qyit5przc-hack-club-bot.vercel.app/0image.png"
        link="https://github.com/v1ctorio/nosesisaido"
        />
		</div>
	</main>
</div>
</Layout>

<style>
	.strike {
		text-decoration: line-through;
	}
	main {
		margin-top: 60px;
		justify-content: center;
		flex-direction: column;
		max-width: 65ch;
		width: 100%;
		display: flex;
		margin-left: auto;
		margin-right: auto;
	}
	h1 {
		padding: 10px 0px 10px 0px;
		font-size: 50px;
	}
	p {
		padding-top: 10px ;
	}
	
	a {
		text-decoration: none;
		color: rgb(2, 132, 199);
	}

</style>
